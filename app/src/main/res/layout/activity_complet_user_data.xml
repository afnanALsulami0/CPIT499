<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activites.complete_user_dataActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.FillMedicalRecord.AppBarOverlay"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/Theme.FillMedicalRecord.PopupOverlay" />

    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:text="Blood Type"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent" />

            <EditText
                android:id="@+id/blood_type_ed"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/greyborder_bg"
                android:gravity="center"
                android:textAlignment="center"
                android:textSize="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/store_name_en" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:text="phone number"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent" />

            <EditText
                android:id="@+id/phone_number_ed"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/greyborder_bg"
                android:gravity="center"
                android:inputType="number"
                android:textAlignment="center"
                android:textSize="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/store_name_en" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:text="height"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent" />

            <EditText
                android:id="@+id/height_ed"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/greyborder_bg"
                android:gravity="center"
                android:inputType="number"
                android:textAlignment="center"
                android:textSize="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/store_name_en" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:text="wight"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent" />

            <EditText
                android:id="@+id/wight_ed"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/greyborder_bg"
                android:gravity="center"
                android:inputType="number"
                android:textAlignment="center"
                android:textSize="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/store_name_en" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:text="allergies"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent" />

            <EditText
                android:id="@+id/allergies_ed"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/greyborder_bg"
                android:gravity="center"
                android:textAlignment="center"
                android:textSize="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/store_name_en" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:text="health conditions"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent" />

            <EditText
                android:id="@+id/health_conditions_ed"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/greyborder_bg"
                android:gravity="center"
                android:textAlignment="center"
                android:textSize="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/store_name_en" />

            <Button
                android:id="@+id/next_btn"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_30sdp"
                android:layout_marginBottom="@dimen/_30sdp"
                android:backgroundTint="@color/blue"
                android:text="Update" />

        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>